<Window x:Class="PlayCenter.Views.GameDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Details" Height="400" Width="600">
    <Grid Margin="10">
        <StackPanel>
            <Image Source="{Binding SelectedGame.ImagePath}" Height="150" Width="150"/>
            <TextBlock Text="{Binding SelectedGame.Name}" FontSize="20" HorizontalAlignment="Center" Margin="10"/>
            <TextBlock Text="{Binding SelectedGame.Description}" TextWrapping="Wrap" Margin="10"/>
            <Button Content="View" Width="100" Command="{Binding LaunchGameCommand}" Margin="10" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
